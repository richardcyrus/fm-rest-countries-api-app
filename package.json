{
  "name": "rest-countries-api-app",
  "version": "2.0.0",
  "description": "This is a solution to the REST Countries API with color theme switcher challenge on Frontend Mentor",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "format": "prettier --write .",
    "lint": "eslint \"**/*.[jt]s?(x)\"",
    "fix": "eslint --fix \"**/*.[jt]s?(x)\"",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/richardcyrus/fm-rest-countries-api-app.git"
  },
  "keywords": [
    "css-custom-properties",
    "frontend-mentor",
    "heroicons-react",
    "html5",
    "reactjs",
    "vite"
  ],
  "author": "Richard Cyrus <richard.cyrus@rcyrus.com> (https://www.richardcyrus.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/richardcyrus/fm-rest-countries-api-app/issues"
  },
  "homepage": "https://github.com/richardcyrus/fm-rest-countries-api-app#readme",
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-query-devtools": "^5.91.1",
    "radix-ui": "^1.4.3",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-router": "^7.11.0",
    "redaxios": "^0.5.1",
    "usehooks-ts": "^3.1.1"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@eslint/js": "^9.39.2",
    "@tanstack/eslint-plugin-query": "^5.91.2",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^16.5.0",
    "happy-dom": "^20.0.11",
    "msw": "^2.12.6",
    "prettier": "^3.7.4",
    "sass": "^1.97.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "vite": "^7.3.0",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=16"
  },
  "msw": {
    "workerDirectory": [
      "./public"
    ]
  },
  "volta": {
    "node": "24.12.0"
  }
}
